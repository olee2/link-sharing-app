{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",

    "outDir": "./public/js",
    "rootDir": "./src",

    "strict": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceRoot": "../src",
    "inlineSourceMap": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "tests/"]
}
